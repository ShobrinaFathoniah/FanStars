<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shobrinaf.stars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.shobrinaf.stars.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stars">

        <activity
            android:name="com.shobrinaf.stars.MainActivity"
            android:theme="@style/Theme.Stars.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.shobrinaf.stars.detail.DetailStarActivity"
            android:label="@string/title_activity_detail_home"
            android:theme="@style/Theme.Stars.NoActionBar" />

        <activity
            android:name="com.shobrinaf.stars.detail.DetailSearchStarActivity"
            android:label="@string/title_activity_detail_home"
            android:theme="@style/Theme.Stars.NoActionBar" />
    </application>

</manifest>